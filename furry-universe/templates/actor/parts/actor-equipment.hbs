<!-- equipment-section.html -->
<div class="equipment-sheet">

  <!-- Attacks and Weapons -->
  <fieldset class="section ">
    <legend class="item flexrow items-header" style="width: 700px;">
      <label class="resource-label">{{localize 'FU.Attacks'}}</label>
      </legend>
      <ol class='items-list'>
   {{#each attacks as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class="bio-caption">
        <label class="resource" style="width:25px">{{localize 'FU.Roll'}}</label>
        <label class="resource" style="width:90px">{{localize 'FU.Name'}}</label>
        <label class="resource" style="width:150px">{{localize 'FU.Damage'}}</label>
        {{#orEq system.type "ranged" "magic"}}
        <label class="resource" style="width:90px">{{localize 'FU.Range'}}</label>
        <label class="resource" style="width:25px">{{localize 'FU.ROF'}}</label>
        <label class="resource" style="width:25px">{{localize 'FU.AP'}}</label>
        <label class="resource" style="width:40px">{{localize 'FU.Ammo'}}</label>
         {{/orEq}}
        <label class="resource" style="width:100px">{{localize 'FU.Traits'}}</label>
      </div>

      <div class="attack-display">
{{!Roll Buttons}}
       {{#if (eq system.addability "stat")}}
       <button type="rolldie" class="skill-roll rollable" 
           data-roll-type='statdamage'data-label="{{item.name}} {{localize 'FU.Damage'}}"><img src="systems/furry-universe/css/ui/Die.png" alt="Roll" /> </button>
        {{/if}}
         {{#if (eq system.addability "flat")}}
          <button type="rolldie" class="skill-roll rollable"   
          data-roll-type='damage'data-label="{{item.name}} {{localize 'FU.Damage'}}"><img src="systems/furry-universe/css/ui/Die.png" alt="Roll" /></button>
        {{/if}}
{{!Attack name}}
        <label class="resource" style="width:10px"></label>   
        <label class="resource" style="width:95px">{{item.name}}</label>
{{!Formula Labels}}
       {{#if (eq system.addability "stat")}}
        <label class="resource" name="system.damage" style="width:150px">{{system.aability}}+{{system.damage}}{{localize 'FU.S'}}{{system.damagetype}}</label>
      {{/if}}
      {{#if (eq system.addability "flat")}}
        <label class="resource" name="system.damage" style="width:150px">{{system.damage}}{{localize 'FU.S'}}{{system.damagetype}}</label>
       {{/if}}

{{!Hiding ranged stats for melee}}
        {{#orEq system.type "ranged" "magic"}}
        <select disabled class="prevent-select " style="width:105px">
            {{selectOptions @root.FU.Range selected=system.range localize=true}}</select>
             <label class="resource" style="width:25px">{{system.rof}}</label>
              <label class="resource" style="width:25px">{{system.ap}}</label>
             <label class="resource" style="width:50px">{{system.ammo.value}}/{{system.ammo.max}}</label>
              {{/orEq}}
             <label class="resource" style="width:100px">{{system.traits}}</label>         
       
      </div>

      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='attack'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='attack'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
     <details>
 <summary style="list-style:">
  {{localize 'FU.Description'}}
    </summary>
   <div class="frame" style="height:auto"> 
    <div>{{{system.description}}} </div>
      </div>
</details>
  {{/each}}
<div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='attack'}}'
        data-type='attack'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='attack'}}
      </a>
    </div>
</ol>
  </fieldset>

  <!-- Equipment -->
  <fieldset class="section ">
    <legend class="item flexrow items-header" style="width: 700px;">
      <label class="resource-label">{{localize 'FU.Equipment'}}</label>
      </legend>

    <div class="grid grid-5col">
<!-- Left Column -->
<div class="grid-span-2">


<div class="equipment-block">
  <label class="ability-label">{{localize 'FU.EquippedArmor'}}</label>
  <div class="bio-section">
  <label class="bio-caption" style="width:180px">{{localize 'FU.Name'}}</label>
  <label class="bio-caption" style="width:80px">{{localize 'FU.Location'}}</label>
  <label class="bio-caption" style="width:25px">{{localize 'FU.Armor'}}</label>
</div>
  <div class="equipment-row">
    <input style="width:25px" type="text" name="system.head.item" value="{{system.head.item}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.head.item}}">{{localize 'FU.Head'}} </label>
    <input style="width:25px" type="number" name="system.head.armor" value="{{system.head.armor}}" data-dtype="number"/>
  </div>
  <div class="equipment-row">
    <input type="text" style="width:150px" name="system.torso.item" value="{{system.torso.item}}"  placeholder="Name"/>
    <label type="text" class="justify" style="width:115px" for="{{system.torso.item}}">{{localize 'FU.Body'}} </label>
    <input type="number" name="system.torso.armor" value="{{system.torso.armor}}" />
  </div>
  <div class="equipment-row">
<input type="text" style="width:150px" name="system.leftarm.item" value="{{system.leftarm.item}}"  placeholder="Name"/>
    <label type="text" class="justify" style="width:115px" for="{{system.leftarm.item}}">{{localize 'FU.LeftArm'}} </label>
    <input type="number" name="system.leftarm.armor" value="{{system.leftarm.armor}}" />
  </div>
  <div class="equipment-row">
    <input type="text" style="width:150px" name="system.rightarm.item" value="{{system.rightarm.item}}"  placeholder="Name"/>
    <label type="text" class="justify" style="width:115px" for="{{system.rightarm.item}}">{{localize 'FU.RightArm'}} </label>
    <input type="number" name="system.rightarm.armor" value="{{system.rightarm.armor}}" />
  </div>
  <div class="equipment-row">
    <input type="text" style="width:150px" name="system.legs.item" value="{{system.legs.item}}"  placeholder="Name"/>
    <label type="text" class="justify" style="width:115px" for="{{system.legs.item}}">{{localize 'FU.Legs'}} </label>
    <input type="number" name="system.legs.armor" value="{{system.legs.armor}}" />
  </div>

<label class="ability-label">{{localize 'FU.EquippedWeapons'}}</label>
<div class="bio-section">
  <label class="bio-caption" style="width:180px">{{localize 'FU.Name'}}</label>
  <label class="bio-caption" style="width:80px">{{localize 'FU.Location'}}</label>
  <label class="bio-caption" style="width:25px">{{localize 'FU.Defense'}}</label>
</div>
  <div class="equipment-row">
    <input type="text" style="width:150px" name="system.rightarm.held" value="{{system.rightarm.held}}" placeholder="Name"/>
    <label type="text" class="justify" style="width:115px" for="{{system.rightarm.defense}}">{{localize 'FU.RightArm'}} </label>
    <input type="number" name="system.rightarm.defense" value="{{system.rightarm.defense}}" />
  </div>
  <div class="equipment-row">
    <input type="text" style="width:150px" name="system.leftarm.held" value="{{system.leftarm.held}}" placeholder="Name"/>
    <label type="text" class="justify" style="width:115px" for="{{system.leftarm.defense}}">{{localize 'FU.LeftArm'}} </label>
    <input type="number" name="system.leftarm.defense" value="{{system.leftarm.defense}}" />
  </div>
</div>


</div>
<!-- Middle Column -->
<div>
<label class="ability-label">{{localize 'FU.Armor'}}</label>
<div class="character-container">
  
  <img src="systems/furry-universe/css/ui/Body.PNG" alt="PostaÄ‡" class="character-image">

  <label class="label head">{{system.toughtness}}({{system.head.armor}})</label>
  <label class="label torso">{{system.toughtness}}({{system.torso.armor}})</label>
  <label class="label left-arm">{{system.toughtness}}({{system.leftarm.armor}})</label>
  <label class="label right-arm">{{system.toughtness}}({{system.rightarm.armor}})</label>
  <label class="label legs">{{system.toughtness}}({{system.legs.armor}})</label>
</div>

</div>
<!-- Right Column -->
<div class="grid-span-2">
<div class="equipment-block">
<label class="ability-label">{{localize 'FU.WornItems'}}</label>
<div class="spell-display">
  <label class="bio-caption">{{localize 'FU.Name'}}</label>
  <label class="bio-caption">{{localize 'FU.Location'}}</label>
  <label class="bio-caption">{{localize 'FU.Attunmed'}}</label>
</div>
  <div class="equipment-row">
    <input style="width:25px" type="text" name="system.head.necklace" value="{{system.head.necklace}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.head.necklace}}">{{localize 'FU.necklace'}} </label>
    <input type="checkbox" name="system.head.attuned" {{ checked system.head.attuned }} /></label>
  </div>
  <div class="equipment-row">
    <input style="width:25px" type="text" name="system.rightarm.ring" value="{{system.rightarm.ring}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.rightarm.ring}}">{{localize 'FU.ring'}} </label>
    <input type="checkbox" name="system.rightarm.attuned" {{ checked system.rightarm.attuned }} /></label>
  </div>
  <div class="equipment-row">
    <input style="width:25px" type="text" name="system.leftarm.ring" value="{{system.leftarm.ring}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.leftarm.ring}}">{{localize 'FU.ring'}} </label>
    <input type="checkbox" name="system.leftarm.attuned" {{ checked system.leftarm.attuned }} /></label>
  </div>
  <div class="equipment-row">
   <input style="width:25px" type="text" name="system.torso.cloak" value="{{system.torso.cloak}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.torso.cloak}}">{{localize 'FU.cloak'}} </label>
    <input type="checkbox" name="system.torso.attuned" {{ checked system.torso.attuned }} /></label>
  </div>
  <div class="equipment-row">
  <input style="width:25px" type="text" name="system.legs.shoes" value="{{system.legs.shoes}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.legs.shoes}}">{{localize 'FU.shoes'}} </label>
    <input type="checkbox" name="system.legs.attuneds" {{ checked system.legs.attuneds }} /></label>
  </div>
  <div class="equipment-row">
  <input style="width:25px" type="text" name="system.legs.belt" value="{{system.legs.belt}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.legs.belt}}">{{localize 'FU.belt'}} </label>
    <input type="checkbox" name="system.legs.attunedb" {{ checked system.legs.attunedb }} /></label>
  </div>
  <div class="equipment-row">
  <input style="width:25px" type="text" name="system.arms.gloves" value="{{system.arms.gloves}}" data-dtype="text"/>
    <label type="text" class="justify" style="width:115px" for="{{system.arms.gloves}}">{{localize 'FU.gloves'}} </label>
    <input type="checkbox" name="system.arms.attuned" {{ checked system.arms.attuned }} /></label>
  </div>
</div>


</div>

    </div>

  </fieldset>

  <!-- Backpack -->
  <fieldset class="section ">
    <legend class="item flexrow items-header" style="width: 700px;">
      <label class="resource-label">{{localize 'FU.Backpack'}}</label>
      </legend>
      <div class="grid grid-2col"> 
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class="bio-caption">
  <label class="resource" style="width:130px">{{localize 'FU.Name'}}</label>
  <label class="resource" style="width:100">{{localize 'FU.quantity'}}</label>
  <label class="resource" style="width:50">{{localize 'FU.weight'}}</label>
</div>

  </li>
  {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
       <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='systems/furry-universe/css/ui/chat.png' title='{{localize 'FU.SendToChat'}}' width='24' height='24' />
          </a>
        </div class="item-quantity-sheet">
        <label class="resource" style="width:100px">{{item.name}}</label>
        <input class="resource item-quantity item-quantity-sheet"  style="width:50px" data-item-id="{{item._id}}"value="{{system.quantity}}" data-dtype="Number"> </input>
        <label class="resource justify" style="width:50px">{{system.weight}}</label>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Item'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Item'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
   <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Item'}}'
        data-type='item'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='item'}}
      </a>
    </div>
</ol>
<div>
  <ol class='items-list'>
  <li class='item flexrow items-header'>
 <label>{{localize 'FU.Notes'}}</label> 
  </li>
  <li> 
    <div style="height:200px">
{{editor enrichedBnotes target="system.backpacknotes" engine="prosemirror" button=true editable=editable}}
    </div>
    
   </li>
</div>
</div>

  </fieldset>
    

</div>

